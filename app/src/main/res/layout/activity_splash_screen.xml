<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient1"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/joystick"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/joystick"
        android:backgroundTint="@color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/playsure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joystick"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lineSpacingExtra="-50dp"
        android:text="PlaySure"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/bubbleboddyneue_regular" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pb"
        style="@style/Widget.MaterialComponents.LinearProgressIndicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/playsure"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:indeterminate="true"
        android:max="100"
        android:progress="0"
        app:indicatorColor="@color/white"
        app:trackColor="@color/black" />

</RelativeLayout>